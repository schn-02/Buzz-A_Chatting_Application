<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:actionBarNavMode="tabs"
    tools:context=".Authentication.SignUp">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/v" />

    <!-- Lottie Animation on top of background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/a" />

    <!-- Main content on top of animation and image -->
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#121212"
            android:backgroundTint="#022E4E"
            android:src="@drawable/avatars"
            app:civ_border_color="#FF000000"
            app:civ_border_width="4dp"
            app:civ_circle_background_color="#EDE6E6" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Name Input Field -->

        <EditText
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:fontFamily="sans-serif-thin"
            android:hint="Enter Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#AFA01A"
            android:textColorHint="#F2EEEE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Email Input Field -->
        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="sans-serif-thin"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#AFA01A"

            android:textColorHint="#F2EEEE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Password Input Field -->
        <EditText
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="sans-serif-thin"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#AFA01A"
            android:textColorHint="#F2EEEE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Already have account text -->
        <TextView
            android:id="@+id/al"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="10dp"
            android:text="Already have account?"
            android:textColor="#E9E1E1"
            android:textSize="14dp"
            android:textStyle="bold" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#0A520D"
            android:text="Sign Up"
            android:textColor="#F8F5F5"
            android:textSize="24sp" />

    </LinearLayout>

</FrameLayout>
